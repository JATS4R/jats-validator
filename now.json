{
  "version": 2,
  "name": "jats-validator",
  "alias": "jats-validator.now.sh",
  "scope": "jats4r",
  "public": true,
  "builds": [
    {
      "src": "src/index.html",
      "use": "@now/static"
    },
    {
      "src": "src/dtd.js",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "10mb"
      }
    },
    {
      "src": "src/format.js",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "10mb"
      }
    },
    {
      "src": "src/schematron.js",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "10mb"
      }
    }
  ],
  "routes": [
    { "src": "/", "dest": "/src/index.html", "methods": ["GET"] },
    { "src": "/dtd", "dest": "/src/dtd.js", "methods": ["POST"] },
    { "src": "/format", "dest": "/src/format.js", "methods": ["POST"] },
    { "src": "/schematron", "dest": "/src/schematron.js", "methods": ["POST"] }
  ]
}
