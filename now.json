{
  "version": 2,
  "name": "jats-validator",
  "alias": "jats-validator.now.sh",
  "scope": "jats4r",
  "public": true,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "10mb",
        "includeFiles": [
          "node_modules/@jats4r/dtds/**/*",
          "node_modules/@jats4r/schematrons/**/*"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.js", "methods": ["GET","POST"] }
  ]
}
